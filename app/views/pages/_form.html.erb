<%= form_with(model: page) do |form| %>
  <% if page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
        <% page.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :summary %>
    <%= form.text_field :summary %>
  </div>

  <div class="field">
    <%= form.label :occurred_on %>
    <%= form.datetime_select :occurred_on, ampm: true %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :degree %>
    <%#= form.text_field :degree %>
    <%= form.select :degree, ["Mild", "Moderate", "Severe"] %>

  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_field :image %>
  </div>

  <!--<div class="field">
    <%= form.label :user_id %>
    <%= form.number_field :user_id %>
  </div>-->

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
