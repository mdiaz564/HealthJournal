<p id="notice"><%= notice %></p>

<h1>My Health Journal</h1>

<table>
  <thead>
    <tr>
      <th>Summary</th>
      <th>Occurred on</th>
      <th>Description</th>
      <th>Degree</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
    <div class="card" style="width: 18rem;">
      <img src="https://robohash.org/YOUR-TEXT.png" class="card-img-top" alt="image">
      <div class="card-body">
        <h5 class="card-title"><%= page.summary %></h5>
        <p class="card-text"><%= page.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= page.occurred_on.strftime("%D, %r") %></li>
      </ul>
      <div class="card-body">
        <%= link_to 'Show', page %>
        <%= link_to 'Edit', edit_page_path(page) %>
        <%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
      <tr>
        <td><%= page.summary %></td>
        <td><%= page.occurred_on %></td>
        <td><%= page.description %></td>
        <td><%= page.degree %></td>
        <td><%= page.image %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </div>
    <% end %>
  </tbody>
</table>

<br>
